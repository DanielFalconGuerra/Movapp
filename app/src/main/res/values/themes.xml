<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Movapp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/secondary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cards</item>
        <item name="colorSecondaryVariant">@color/borders</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="splashTheme" parent="Theme.Movapp">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Text.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/text</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="roundimageview" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <item name="color">@color/secondary</item>
    </style>
</resources>